i a # =============================================================================
# COOLIFY DEPLOYMENT CONFIGURATION
# =============================================================================
# This file contains all environment variables needed for Coolify deployment
# 
# SETUP INSTRUCTIONS:
# 1. Copy environment variables to Coolify's "Environment Variables" tab
# 2. Copy secrets to Coolify's "Secrets" tab (generate secure values!)
# 3. Replace 'yourdomain.com' with your actual domain
# 4. See docs/COOLIFY_ENVIRONMENT_SETUP.md for detailed instructions
# 
# VALIDATION COMMANDS:
# - python manage.py validate_environment
# - python manage.py validate_environment --audit
# - python manage.py prepare_coolify_deployment --domain yourdomain.com
# - python validate_deployment_config.py
# 
# QUICK SETUP:
# python manage.py prepare_coolify_deployment --domain yourdomain.com --generate-secrets

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
ENVIRONMENT=production
DEBUG=false
DJANGO_SETTINGS_MODULE=god_bless_pro.settings

# =============================================================================
# DJANGO BACKEND CONFIGURATION
# =============================================================================
# REQUIRED: Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-django-secret-key-here-minimum-50-characters-long-change-this

# REQUIRED: Replace with your actual domain names
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com,www.yourdomain.com
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=god_bless_db
POSTGRES_USER=god_bless_user
POSTGRES_PASSWORD=your-secure-database-password-change-this
POSTGRES_HOST=database
POSTGRES_PORT=5432

# Database Performance
DB_CONN_MAX_AGE=300
DB_CONN_HEALTH_CHECKS=True

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password-change-this

# =============================================================================
# CELERY CONFIGURATION
# =============================================================================
CELERY_BROKER_URL=redis://:your-secure-redis-password-change-this@redis:6379/0
CELERY_RESULT_BACKEND=redis://:your-secure-redis-password-change-this@redis:6379/0

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-app-password-change-this
EMAIL_PORT=587
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=God Bless Platform <noreply@yourdomain.com>

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# Main API and WebSocket URLs
VITE_API_URL=https://yourdomain.com/api
VITE_WS_URL=wss://yourdomain.com/ws

# Application Branding
VITE_APP_NAME=God Bless America Platform
VITE_VERSION=1.0.0
VITE_ENVIRONMENT=production

# =============================================================================
# INITIAL SETUP CONFIGURATION (Optional)
# =============================================================================
# Set to 'true' only for initial deployment to create superuser
CREATE_SUPERUSER=false
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@yourdomain.com
DJANGO_SUPERUSER_PASSWORD=your-secure-admin-password-change-this

# Set to 'true' to load initial data fixtures
LOAD_INITIAL_DATA=false

# =============================================================================
# MONITORING CONFIGURATION (Optional)
# =============================================================================
# Flower - Celery Task Monitor
FLOWER_USER=admin
FLOWER_PASSWORD=your-secure-flower-password-change-this

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=INFO
CELERY_LOG_LEVEL=INFO
SENTRY_DSN=

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# SSL/TLS Configuration (enable for production with HTTPS)
SECURE_SSL_REDIRECT=True
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https
USE_TLS=True

# Session Security
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
CSRF_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
CSRF_COOKIE_SAMESITE=Lax

# Security Headers
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# Cache Configuration
CACHE_TTL=300
SESSION_CACHE_ALIAS=default

# Static Files
STATIC_URL=/static/
MEDIA_URL=/media/

# =============================================================================
# COOLIFY SPECIFIC CONFIGURATION
# =============================================================================
# These are typically set by Coolify automatically
# COOLIFY_FQDN=yourdomain.com
# COOLIFY_URL=https://yourdomain.com
# COOLIFY_BRANCH=main
# COOLIFY_COMMIT_SHA=
# COOLIFY_BUILD_NUMBER=

# =============================================================================
# DEVELOPMENT OVERRIDES (for local development only)
# =============================================================================
# Uncomment these for local development
# DEBUG=True
# SECURE_SSL_REDIRECT=False
# SESSION_COOKIE_SECURE=False
# CSRF_COOKIE_SECURE=False
# ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
# CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000
# VITE_API_URL=http://localhost:8000/api
# VITE_WS_URL=ws://localhost:8000/ws
