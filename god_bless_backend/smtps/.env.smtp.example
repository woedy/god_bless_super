# SMTP Rotation Service Configuration for Docker

# Health Check Settings
SMTP_HEALTH_CHECK_INTERVAL=300          # Health check interval in seconds (5 minutes)
SMTP_MAX_FAILURES=3                     # Max failures before marking server unhealthy
SMTP_CONNECTION_TIMEOUT=15              # Connection timeout in seconds
SMTP_CLEANUP_INTERVAL_HOURS=24          # Hours before cleaning up unhealthy servers

# Performance Monitoring
SMTP_PERFORMANCE_REPORTS=true           # Enable performance report generation
SMTP_ENABLE_HEALTH_CHECKS=true          # Enable automatic health checks
SMTP_ENABLE_PERFORMANCE_TRACKING=true   # Enable performance tracking
SMTP_ENABLE_ROTATION_STATS=true         # Enable rotation statistics

# Alerting Configuration
SMTP_ALERT_ON_FAILURES=true             # Send alerts when servers fail
SMTP_ALERT_THRESHOLD=80.0               # Alert when health percentage drops below this

# Redis Configuration for SMTP Cache
SMTP_REDIS_DB=1                         # Redis database number for SMTP cache
SMTP_CACHE_TIMEOUT=3600                 # Default cache timeout in seconds

# Logging Configuration
SMTP_LOG_LEVEL=INFO                     # Log level (DEBUG, INFO, WARNING, ERROR)
SMTP_LOG_FILE=/app/logs/smtp_rotation.log  # Log file path in container

# Celery Beat Schedule (in minutes)
SMTP_HEALTH_CHECK_SCHEDULE=10           # Run health checks every N minutes
SMTP_CLEANUP_SCHEDULE_HOUR=3            # Hour to run cleanup (0-23)
SMTP_REPORT_SCHEDULE_HOUR=1             # Hour to generate reports (0-23)

# Docker-specific Settings
ENVIRONMENT=production                   # Environment (development/production)
CONTAINER_NAME=god_bless_backend        # Container name for logging